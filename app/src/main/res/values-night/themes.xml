<resources>
    <!-- Base application theme. -->
    <style name="Theme.PrimaryDetailKotlin" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Status and Navigation Bars for Edge-to-Edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Use the existing toolbar for action mode instead of creating a new one on top -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorSurface</item>
        <item name="android:actionModeBackground">?attr/colorSurface</item>
    </style>
</resources>