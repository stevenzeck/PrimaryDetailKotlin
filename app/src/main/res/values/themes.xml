<resources>
    <!-- Base application theme. -->
    <style name="Theme.PrimaryDetailKotlin" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Use Material 3 Color Tokens -->
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorOnPrimary">?attr/colorOnPrimary</item>
        <item name="colorPrimaryContainer">?attr/colorPrimaryContainer</item>
        <item name="colorOnPrimaryContainer">?attr/colorOnPrimaryContainer</item>

        <item name="colorSecondary">?attr/colorSecondary</item>
        <item name="colorOnSecondary">?attr/colorOnSecondary</item>
        <item name="colorSecondaryContainer">?attr/colorSecondaryContainer</item>
        <item name="colorOnSecondaryContainer">?attr/colorOnSecondaryContainer</item>

        <item name="colorTertiary">?attr/colorTertiary</item>
        <item name="colorOnTertiary">?attr/colorOnTertiary</item>
        <item name="colorTertiaryContainer">?attr/colorTertiaryContainer</item>
        <item name="colorOnTertiaryContainer">?attr/colorOnTertiaryContainer</item>

        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="colorOnBackground">?attr/colorOnSurface</item>
        <item name="colorSurface">?attr/colorSurface</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
        <item name="colorSurfaceVariant">?attr/colorSurfaceVariant</item>
        <item name="colorOnSurfaceVariant">?attr/colorOnSurfaceVariant</item>

        <!-- Status and Navigation Bars for Edge-to-Edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Use the existing toolbar for action mode instead of creating a new one on top -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?attr/colorSurface</item>
        <item name="android:actionModeBackground">?attr/colorSurface</item>
    </style>
</resources>